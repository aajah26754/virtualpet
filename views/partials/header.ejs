<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>Formbar Boilerplate</title>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
</head>
<style>
  body {
      font-family: Arial, sans-serif;
      background: #222;
      color: white;
      text-align: center;
      padding-top: 50px;
  }
  
  button {
      padding: 10px 20px;
      margin: 10px;
      font-size: 16px;
      cursor: pointer;
      border: none;
      border-radius: 5px;
      background: #28a745;
      color: white;
  } 
</style>
<body>
<nav>
  <a href="/"><button>Home</button></a> |
  <a href="/adopt"><button>Adopt</button></a> |
  <a href="/inventory"><button>Inventory</button></a> |
  <a href="/tworld"><button>World Map</button></a> |
  <% if (user) { %>
    <a href="/profile"><button>Profile (<%= user.username %>)</button></a> |
    <a href="/logout"><button>Logout</button></a>
  <% } else { %>
    <a href="/login"><button>Login</button></a>
  <% } %>
</nav>
<hr/>
